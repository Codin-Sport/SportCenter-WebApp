<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	
	<display-name>Sport Center</display-name>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>CustomerServlet</servlet-name>
		<servlet-class>me.nichel.sportcenter.controller.CustomerServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>FieldServlet</servlet-name>
		<servlet-class>me.nichel.sportcenter.controller.FieldServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ReservationServlet</servlet-name>
		<servlet-class>me.nichel.sportcenter.controller.ReservationServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CustomerServlet</servlet-name>
		<url-pattern>/CustomerServlet.do</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>FieldServlet</servlet-name>
		<url-pattern>/FieldServlet.do</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ReservationServlet</servlet-name>
		<url-pattern>/ReservationServlet.do</url-pattern>
	</servlet-mapping>
	
</web-app>

